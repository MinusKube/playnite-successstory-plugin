                                <Expander.Content>
                                    <Border IsEnabled="{Binding ElementName=PART_IntegrationCompactLocked, Path=IsChecked}"
				                            Margin="5" Padding="10"
				                            BorderBrush="{DynamicResource PopupBorderBrush}"
				                            BorderThickness="{DynamicResource PopupBorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="{DynamicResource LOCHeight}" Grid.Column="0" />
                                                <playnitecontrols:NumericBox LongValue="{Binding Settings.IntegrationCompactPartialHeight}" 
                                                                             Width="40" Grid.Column="1" TextAlignment="Center" />
                                            </Grid>

                                            <CheckBox Grid.Column="2" Grid.Row="0" IsChecked="{Binding Settings.IntegrationCompactPartialShowDescription}">
                                                <Label Content="{DynamicResource LOCSuccessStoryDescriptionInToolTip}" />
                                            </CheckBox>
                                        </Grid>
                                    </Border>
                                </Expander.Content>
                            </Expander>

                            <Expander Grid.Row="14">
                                <Expander.Style>
                                    <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource {x:Type Expander}}">
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Expander.Style>

                                <Expander.Header>
                                    <CheckBox IsChecked="{Binding Settings.EnableIntegrationChart}" Name="PART_IntegrationChart">
                                        <Label Content="{DynamicResource LOCSuccessStoryIntegrationShowGraphic}" />
                                    </CheckBox>
                                </Expander.Header>

                                <Expander.Content>
                                    <Border IsEnabled="{Binding ElementName=PART_IntegrationChart, Path=IsChecked}"
				                            Margin="5" Padding="10"
				                            BorderBrush="{DynamicResource PopupBorderBrush}"
				                            BorderThickness="{DynamicResource PopupBorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Column="0" Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{DynamicResource LOCHeight}" Grid.Column="0" />
                                                <playnitecontrols:NumericBox LongValue="{Binding Settings.IntegrationChartHeight}" 
                                                                     Width="40" Grid.Column="1" TextAlignment="Center" />
                                            </Grid>

                                            <CheckBox Grid.Column="0" Grid.Row="2" IsChecked="{Binding Settings.EnableIntegrationAxisChart}">
                                                <Label Content="{DynamicResource LOCSuccessStoryIntegrationGraphicShowLabels}" />
                                            </CheckBox>
                                            <CheckBox Grid.Column="1" Grid.Row="2" IsChecked="{Binding Settings.EnableIntegrationOrdinatesChart}">
                                                <Label Content="{DynamicResource LOCSuccessStoryIntegrationGraphicShowLabelsOrdinates}" />
                                            </CheckBox>

                                            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="15" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="{DynamicResource LOCSuccessStoryIntegrationGraphicOptionsCountAbscissa}" Grid.Column="0" />
                                                <Slider Minimum="3" Maximum="30" Value="{Binding Settings.IntegrationChartCountAbscissa}" 
                                                        IsSnapToTickEnabled="True" TickFrequency="1" AutoToolTipPlacement="TopLeft"
                                                        ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Value}"
                                                        Grid.Column="1" VerticalAlignment="Center" Margin="20,0,5,0" Name="sCountAbscissa" />
                                                <Label Grid.Column="2" Content="{Binding ElementName=sCountAbscissa, Path=Value}" HorizontalAlignment="Center" />
                                            </Grid>

                                            <CheckBox Grid.Column="0" Grid.Row="6" IsChecked="{Binding Settings.EnableIntegrationChartHideOptions}">
                                                <Label Content="{DynamicResource LOCCommonChartHideOptions}" />
                                            </CheckBox>

                                            <CheckBox Grid.Column="0" Grid.Row="8" IsChecked="{Binding Settings.EnableIntegrationChartAllPerdiod}">
                                                <Label Content="{DynamicResource LOCCommonChartAllPeriod}" />
                                            </CheckBox>
                                            <CheckBox Grid.Column="2" Grid.Row="8" IsChecked="{Binding Settings.EnableIntegrationChartCutPeriod}">
                                                <Label Content="{DynamicResource LOCCommonChartCutPeriod}" />
                                            </CheckBox>
                                        </Grid>
                                    </Border>
                                </Expander.Content>
                            </Expander>

                            <Expander Grid.Row="16">
                                <Expander.Style>
                                    <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource {x:Type Expander}}">
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Expander.Style>

                                <Expander.Header>
                                    <CheckBox IsChecked="{Binding Settings.EnableIntegrationUserStats}" Name="PART_IntegrationUserStats">
                                        <Label Content="{DynamicResource LOCSuccessStoryIntegrationShowUserStats}" />
                                    </CheckBox>
                                </Expander.Header>

                                <Expander.Content>
                                    <Border IsEnabled="{Binding ElementName=PART_IntegrationUserStats, Path=IsChecked}"
				                            Margin="5" Padding="10"
				                            BorderBrush="{DynamicResource PopupBorderBrush}"
				                            BorderThickness="{DynamicResource PopupBorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="{DynamicResource LOCHeight}" Grid.Column="0" />
                                                <playnitecontrols:NumericBox LongValue="{Binding Settings.IntegrationUserStatsHeight}" 
                                                                 Width="40" Grid.Column="1" TextAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Expander.Content>
                            </Expander>

                            <Expander Grid.Row="18">
                                <Expander.Style>
                                    <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource {x:Type Expander}}">
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Expander.Style>

                                <Expander.Header>
                                    <CheckBox IsChecked="{Binding Settings.EnableIntegrationList}" Name="PART_IntegrationAchievements">
                                        <Label Content="{DynamicResource LOCSuccessStoryIntegrationShowAchievements}" />
                                    </CheckBox>
                                </Expander.Header>

                                <Expander.Content>
                                    <Border IsEnabled="{Binding ElementName=PART_IntegrationAchievements, Path=IsChecked}"
				                            Margin="5" Padding="10"
				                            BorderBrush="{DynamicResource PopupBorderBrush}"
				                            BorderThickness="{DynamicResource PopupBorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="{DynamicResource LOCHeight}" Grid.Column="0" />
                                                <playnitecontrols:NumericBox LongValue="{Binding Settings.IntegrationListHeight}" 
                                                                             Width="40" Grid.Column="1" TextAlignment="Center" />
                                            </Grid>

                                            <Grid Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="15" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="{DynamicResource LOCColumns}" Grid.Column="0" />
                                                <Slider Minimum="1" Maximum="5" Value="{Binding Settings.IntegrationListColCount}" 
                                                        IsSnapToTickEnabled="True" TickFrequency="1" AutoToolTipPlacement="TopLeft"
                                                        ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Value}"
                                                        Grid.Column="1" VerticalAlignment="Center" Margin="20,0,5,0" Name="sColCount" />
                                                <Label Grid.Column="2" Content="{Binding ElementName=sColCount, Path=Value}" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Expander.Content>
                            </Expander>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="{DynamicResource LOCSuccessStoryIgnoredGames}">
                <ListBox Name="PART_IgnoredGames" Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <Image HorizontalAlignment="Center" Height="32" VerticalAlignment="Center" Width="32" 
                                       Grid.Column="0"
                                       Source="{Binding Icon, Converter={StaticResource DefaultIconConverter}}" />
                                <TextBlock Text="{Binding Name}" Grid.Column="2" VerticalAlignment="Center" />
                                <Label Content="{Binding SourceIcon}" FontFamily="{DynamicResource CommonFont}" 
                                       Grid.Column="4"
                                       HorizontalAlignment="Center" VerticalAlignment="Stretch" FontSize="30" />

                                <Button Grid.Column="6" Content="" FontFamily="{DynamicResource CommonFont}" 
                                        Click="Button_Click_Remove" HorizontalAlignment="Right"
                                        Tag="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}, Mode=OneWay, Converter={StaticResource IndexConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
